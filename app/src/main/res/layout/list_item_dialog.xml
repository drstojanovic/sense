<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="@string/app_details"/>
    <View android:id="@+id/divider" style="@style/Divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_image"
            android:src="@drawable/ic_my_location_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:text="App name:"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/app_name"
                    android:text="App name:"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:text="Foreground time:"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/foreground_time"
                    android:text="Foreground time:"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="horizontal">

                <TextView
                    android:text="Last time used:"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/last_time_used"
                    android:text="Last time used:"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



